<% @videos.each do |video| %>
  <tr>
    <td><%= video.movie_file_name %></td>
    <td><%= video.movie_content_type %></td>
    <td><%= video.movie_file_size %></td>
    <td><%= link_to 'Show', admin_video_path(video) %></td>
    <td><%= link_to 'Edit', edit_admin_video_path(video) %></td>
    <td><%= link_to 'Destroy', admin_video_path(video), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

