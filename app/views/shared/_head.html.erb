<title><%= title %></title>
<meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
<%== meta_data_tags %>
<%== stylesheet_tags %>
<%= stylesheet_link_tag "helper", "customize.css" %>
<style type="text/css">
	/* Layout */
	@import "/stylesheets/dropdown.css";

	/* Theme */
	@import "/stylesheets/default.css";
</style>

<%= csrf_meta_tag %>
<%= javascript_include_tag 'jquery-1.4.2.min', 'jquery.validate.min.js', 'rails', 'application', :cache => 'jquery-core' %>
<!--[if lte IE 7]>
	<script type="text/javascript" src="/javascript/jquery.dropdown.js"></script>
<![endif]-->
<% unless I18n.locale.to_s[0..1] == 'en' %>
  <%= javascript_include_tag ['localization/messages_', I18n.locale.to_s[0..1], '.js'].join %>
<% end %>
<%= yield :head %>
